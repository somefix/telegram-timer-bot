generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Timer {
  id             String   @id
  eventDate      DateTime
  chatId         BigInt
  pinnedMessageId Int?
  isRunning      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("timers")
} 